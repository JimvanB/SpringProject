<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dd/spring-beans-2.0.dtd">

<beans>

    <bean id="parentPointList" class="Triangle" abstract="true">
        <property name="points">
            <list>
                <ref bean="pointA" />
            </list>
        </property>
    </bean>

    <bean id="parent_triangle" class="Triangle">
        <property name="pointA" ref="pointA" />
    </bean>


    <bean id="triangle" class="Triangle" parent="parent_triangle" >
        <property name="pointB" ref="pointB" />
        <property name="pointC" ref="pointC" />

    </bean>

    <bean id="triangle2" class="Triangle" parent="parent_triangle" >
        <property name="pointB" ref="pointB" />
    </bean>

    <bean id="listTriangle" parent="parentPointList">
        <property name="points">
            <list merge="true">
                <ref bean="pointB" />
                <ref bean="pointC" />
            </list>
        </property>
    </bean>



    <!-- POINTS -->

    <bean id="pointA" class="Point">
        <property name="x" value="0" />
        <property name="y" value="0" />
    </bean>


    <bean id="pointB" class="Point">
        <property name="x" value="-20" />
        <property name="y" value="0" />
    </bean>

    <bean id="pointC" class="Point">
        <property name="x" value="0" />
        <property name="y" value="20" />
    </bean>


</beans>