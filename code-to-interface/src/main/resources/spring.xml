<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dd/spring-beans-2.0.dtd">

<beans>
    <bean id="triangle" class="Triangle" autowire="byName" />

    <bean id="pointA" class="Point">
        <property name="x" value="0" />
        <property name="y" value="0" />
    </bean>

    <bean id="pointB" class="Point">
        <property name="x" value="-20" />
        <property name="y" value="0" />
    </bean>

    <bean id="pointC" class="Point">
        <property name="x" value="0" />
        <property name="y" value="20" />
    </bean>

    <bean id="circle" class="Circle" autowire="byName" />

    <bean id="center" class="Point">
        <property name="x" value="15" />
        <property name="y" value="15" />
    </bean>

</beans>